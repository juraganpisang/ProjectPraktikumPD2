package tugasakhir;

import java.util.ArrayList;
import java.util.Scanner;

/**
 *
 * @author Hola
 */
public class TugasAkhir {

    static ArrayList<String> suit = new ArrayList<String>();

    //untuk menampilkan suit
    static void suit() {
        for (int i = 0; i < suit.size(); i++) {
            System.out.println((i + 1) + ". " + suit.get(i));
        }
        System.out.print("Masukkan Pilihan : ");
    }

    //untuk mengecek pemenang
    static String cek_suit(int suit_player1, int suit_player2) {
        String data_player1, data_player2;
        data_player1 = suit.get(suit_player1 - 1);
        data_player2 = suit.get(suit_player2 - 1);
        String hasil = "";
        String player1 = "Player 1";
        String player2 = "Player 2";

        if (data_player1.equalsIgnoreCase("Gunting") && data_player2.equalsIgnoreCase("Batu")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player2;
        } else if (data_player1.equalsIgnoreCase("Gunting") && data_player2.equalsIgnoreCase("Kertas")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player1;
        } else if (data_player1.equalsIgnoreCase("Batu") && data_player2.equalsIgnoreCase("Gunting")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player1;
        } else if (data_player1.equalsIgnoreCase("Batu") && data_player2.equalsIgnoreCase("Kertas")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player2;
        } else if (data_player1.equalsIgnoreCase("Kertas") && data_player2.equalsIgnoreCase("Gunting")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player2;
        } else if (data_player1.equalsIgnoreCase("Kertas") && data_player2.equalsIgnoreCase("Batu")) {
            hasil = data_player1 + " vs " + data_player2 + "\n"
                    + "Pemenang adalah " + player1;
        }
        return hasil;
    }

    public static void main(String[] args) {
        //pendeklarasian import2
        Scanner input = new Scanner(System.in);

        suit.add("Gunting");
        suit.add("Batu");
        suit.add("Kertas");

        //pendeklarasian variabel
        String pemenang;
        boolean sama = false;
        int pilih_menu, suit_player1, suit_player2;

        //Tampilan Menu Awal
        System.out.println("======================");
        System.out.println("ULAR TANGGA SEDERHANA");
        System.out.println("======================");

        System.out.println("\n1. Main kuy!");
        System.out.println("2. Lihat Skor Permainan");
        System.out.println("3. Keluar");
        System.out.print("Masukkan Pilihan : ");
        pilih_menu = input.nextInt();
        switch (pilih_menu) {
            //Menu Buat Main
            case 1:
                System.out.println("ULAR TANGGA\n");
                System.out.println("Tahap Pertama");
                System.out.println("Silahkan Adu Suit (Gunting Batu Kertas)");
                System.out.println("Peserta Di Harap Saling Bergantian\n");
                do {
                    sama = false;
                    do {
                        System.out.println("Player 1");
                        suit();
                        suit_player1 = input.nextInt();
                    } while (suit_player1 < 1 || suit_player1 > 3);
                    for(int i = 0; i < 100; i++){
                    System.out.println("");
                        };
                    do {
                        System.out.println("Player 2");
                        suit();
                        suit_player2 = input.nextInt();
                    } while (suit_player2 < 1 || suit_player2 > 3);
                    //untuk melakukan pengecekan suit,jika sama
                    if (suit_player1 == suit_player2) {
                        System.out.println(suit.get(suit_player1) + " vs " + suit.get(suit_player2) + ". Lakukan Suit Lagi");
                        sama = true;
                    }
                } while (sama == true);
                //jika tidak sama
                pemenang = cek_suit(suit_player1, suit_player2);
                System.out.println(pemenang);

                break;
            //Menu Buat Skor
            case 2:
                break;
            case 3:
                break;
        }
    }

}
